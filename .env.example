# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_placeholder
POSTGRES_DB=diabeticsplatform
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Backend Security
# Generate a secure key using: openssl rand -hex 32
SECRET_KEY=change_this_to_a_secure_random_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS & Trusted Hosts
# Comma separated lists
ALLOWED_HOSTS=api.yourdomain.com,localhost,127.0.0.1
CORS_ORIGINS=https://app.yourdomain.com,http://localhost:3000

# Docker Registry (Optional, if pulling from private registry)
DOCKER_REGISTRY=ghcr.io/yourusername
IMAGE_TAG=latest

# Cloudflare (If using Tunnel or strict SSL mode upstream)
# CF_TOKEN=...
